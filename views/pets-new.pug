extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      legend New Pet
      form(action="#", id="new-pet")
        .form-group
            label Name
            input.form-control(name="name" required)
        .form-group
            label Birthday
            input.form-control(name="birthday", type="date" required)
        .form-group
            label Species
            input.form-control(name="species" required)
        .form-group
            label Avatar*
            input.form-control(name="avatar" type="file" required style="padding-bottom: 2.3em;")
        .form-group
            label Favorite Food
            input.form-control(name="favoriteFood" requireds) 
        .form-group
            label Description
            textarea.form-control(name="description" minlength="140" required)   
        button(type="submit").btn.btn-primary Save