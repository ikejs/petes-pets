doctype html
html
  head
    title Proud Pete's Pet Emporium

    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    nav.navbar.navbar-expand-sm.navbar-light.bg-light
      a.navbar-brand(href='/') Proud Pete's Pet Emporium
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            form(action="/search")
              .form-group
                .input-group.mb-3
                  input.form-control(type='text' placeholder="Search..." aria-label="Search..." aria-describedby='basic-addon2' name="term")
                  .input-group-append
                    button.btn.btn-outline-secondary(type='submit') Search
          li.nav-item.mr-auto
            a.nav-link(href='/pets/new') New Pet

    .container
      .alert#alert(style="display:none;")
      block content

    footer.mt-5
      .container-fluid.bg-primary.py-3
        .container
          .row.py-3
            .col-md-9
              p.text-white Proud Pete's Pet Emporium &#xA9; 2018


    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous")
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    script(src="/javascripts/scripts.js")